<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_cancel</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="AuthTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <!--  For the sake of xml preview not breaking  -->
    <style name="FABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="FABStyleList" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="tint">@color/white</item>
        <item name="android:backgroundTint">@drawable/fab_states</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="CustomActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:editTextColor">@color/black</item>
    </style>
    
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/searchview_shape</item>
        <item name="searchHintIcon">@android:drawable/ic_search_category_default</item>
    </style>

    <style name="TranslateButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="TranslateImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

</resources>
