<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/spokenLangTV"
        style="@style/LangPickerTextViewStyle" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background">

        <Spinner
            android:id="@+id/spokenLangSpinner"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="125dp"
        android:layout_marginVertical="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@id/andTV"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/andTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/and" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/andTV"
            android:background="@color/colorPrimary" />
    </RelativeLayout>

    <TextView
        android:id="@+id/targetLangTV"
        style="@style/LangPickerTextViewStyle" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background">

        <Spinner
            android:id="@+id/targetLangSpinner"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog" />

    </FrameLayout>

    <Button
        android:id="@+id/continueBtn"
        style="@android:style/Widget.Material.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/colorPrimary" />

</LinearLayout>